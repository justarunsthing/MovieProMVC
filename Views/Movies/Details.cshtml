@using MovieProMVC.Interfaces
@using MovieProMVC.Models.Database

@model Movie
@inject IImageService _imageService

<div class="row">
	<div class="col-sm-12 col-md-6">
		<div class="row">
			<img src="@_imageService.DecodeImage(Model.Poster, Model.PosterType)" class="w-100" alt="..." />
		</div>
		<div class="row">
			<button class="btn btn-lg d-block fw-bolder" data-toggle="modal" data-targer="#trailer">
				Watch Trailer
			</button>
		</div>
	</div>
	<div class="col-sm-12 col-md-6">
		<div class="row">
			<div class="col h5">
				<span class="fw-bolder mr-2">
					Title:
				</span>
				@Model.Title
			</div>
		</div>
		<hr />
		<div class="row">
			<div class="col h5">
				<span class="fw-bolder mr-2">
					Release Date:
				</span>
				@Model.ReleaseDate.ToString("MMMM dd, yyyy")
			</div>
		</div>
		<hr />
		<div class="row">
			<div class="col h5">
				<span class="fw-bolder mr-2">
					Rating:
				</span>
				@Model.Rating
			</div>
		</div>
		<hr />
		<div class="row">
			<div class="col h5">
				<span class="fw-bolder mr-2">
					Reviews:
				</span>
				@Model.VoteAverage / 10
			</div>
		</div>
		<div class="row mt-3 mb-2">
			<div class="col">
				<span class=" h5 fw-bolder">
					Overview :
				</span>
			</div>
		</div>
		<div class="row">
			<div class="col">
				<span class="h5 ml-42">
					@Model.Overview
				</span>
			</div>
		</div>
	</div>
</div>
<div class="row">
</div>

@* Modal *@
<div id="trailer" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="trailerLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">
					@Model.Title
				</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<div class="embed-responsive embed-responsive-16by9">
					@{
						var key = Model.TrailerUrl.Split('=').LastOrDefault();
						var source = $"https://www.youtube.com/embed/{key}";
					}

					<iframe width="560" height="315" src="@source"
						    title="YouTube video player" frameborder="0"
							allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
							allowfullscreen>
					</iframe>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">
					Close
				</button>
			</div>
		</div>
	</div>
</div>