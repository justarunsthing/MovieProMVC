@using MovieProMVC.Models.Tmdb
@model ActorDetails

<div class="media">
	<img src="@Model.profile_path" class="align-self-center mr-3" alt="..." />
	<div class="media-body">
		<div class="row">
			<table class="table table-hover">
				<tbody>
					<tr>
						<td>Name:</td>
						<td>@Model.name</td>
					</tr>
					<tr>
						<td>Biography:</td>
						<td>@Model.biography</td>
					</tr>
					<tr>
						<td>Birthday:</td>
						<td>@Model.birthday</td>
					</tr>
					<tr>
						<td>Place of Birth:</td>
						<td>@Model.place_of_birth</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>